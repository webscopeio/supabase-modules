{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env", ".env.local"],
  "pipeline": {
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        ".vitepress/dist/**",
        "dist/**"
      ]
    },
    "dev": {
      "dotEnv": [".env.local"],
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "dev:remote": {
      "dotEnv": [".env"]
    },
    "db:start": {
      "cache": false
    },
    "db:stop": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    },
    "db:gen-types": {},
    "email:dev": {
      "cache": false
    },
    "email:export": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "format": {
      "cache": false
    }
  }
}
